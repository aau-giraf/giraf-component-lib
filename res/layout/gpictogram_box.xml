<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="5dp">


    <!--  Pictogram picture -->
    <LinearLayout
        android:id="@+id/pictogram_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="6dip"
        android:background="@drawable/gprofile_pic_box"
        android:layout_centerHorizontal="true"
        android:layout_marginRight="5dip">

        <ImageView
            android:id="@+id/pictogram_picture"
            android:layout_width="100dip"
            android:layout_height="100dip"
            android:src="@drawable/no_profile_pic"/>

    </LinearLayout>

    <dk.aau.cs.giraf.gui.GTextView
        android:id="@+id/pictogram_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/pictogram_layout"
        android:text="A Pictogram"
        android:textColor="#000"
        android:textSize="20dp"
        android:layout_centerHorizontal="true"
        android:textStyle="bold" />

</RelativeLayout>