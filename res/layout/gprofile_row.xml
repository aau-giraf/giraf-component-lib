<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:layout_marginTop="50dp"
     >
    
     <!--  Profile pic -->
    <LinearLayout android:id="@+id/profile_pic"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="6dip"
        android:layout_alignParentLeft="true"
        android:background="@drawable/gprofile_pic_box"
        android:layout_marginRight="5dip">
 
        <ImageView
            android:id="@+id/imageview_profilepic"
            android:layout_width="75dip"
            android:layout_height="100dip"
            android:src="@drawable/no_profile_pic"/>
 
    </LinearLayout>

    <dk.aau.cs.giraf.gui.GTextView
        android:id="@+id/profile_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="30dp"
        android:layout_toRightOf="@id/profile_pic"
        android:textColor="#555"
        android:text="En Person"
        android:textSize="60dp"
        android:textStyle="bold" />

</RelativeLayout>