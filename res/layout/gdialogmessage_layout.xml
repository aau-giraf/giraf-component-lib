<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:id="@+id/GDialogMessage_frame">

    <RelativeLayout
        android:id="@+id/GDialogMessage_topWrapper"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/GDialogMessage_image"
            android:layout_marginRight="25dp"
            android:layout_marginBottom="25dp" />

        <TextView
            android:id="@+id/GDialogMessage_headline"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/GDialogMessage_image"
            android:layout_marginBottom="10dp"
            android:textSize="30dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/GDialogMessage_description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20dp"
            android:layout_toRightOf="@id/GDialogMessage_image"
            android:layout_below="@id/GDialogMessage_headline" />

    </RelativeLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="10dp"
        android:layout_below="@id/GDialogMessage_topWrapper"
        android:layout_centerHorizontal="true" >

        <dk.aau.cs.giraf.gui.GVerifyButton
            android:id="@+id/GDialogMessage_okBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="25dp" />
        <dk.aau.cs.giraf.gui.GCancelButton
            android:id="@+id/GDialogMessage_cancelBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </LinearLayout>

</RelativeLayout>